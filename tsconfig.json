{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "declaration": true, //自动生成 type 类型声明文件
    "declarationDir": "./temp",
    "strict": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "dist",
    "node_modules",
  ],
  "files": [
    "src/index.ts",
  ],
  "include": ["./src/**/*","./global.d.ts"]
}